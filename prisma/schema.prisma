// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
}

model NFe {
  id               String    @id @default(uuid())
  access_key       String    @unique
  number           String
  series           String
  issue_date       DateTime
  issuer_name      String
  issuer_cnpj      String
  recipient_name   String
  recipient_cnpj   String
  total_value      Float
  items            NFeItem[]
  created_at       DateTime  @default(now())
}

model NFeItem {
  id          String  @id @default(uuid())
  code        String
  description String
  ncm         String
  quantity    Float
  unit_price  Float
  total_value Float
  nfe_id      String
  nfe         NFe     @relation(fields: [nfe_id], references: [id])
}
